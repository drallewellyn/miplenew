<%= form_for(@pletool) do |f| %>
  <% if @pletool.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pletool.errors.count, "error") %> prevented this Tool from being saved:</h2>
      <ul>
      <% @pletool.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="page-content" role="main"> 
    <div class="container blog">   
      <div class="form-group">
        <% if @pletool.image.exists? %>    
            <%= image_tag @pletool.image.url(:medium) %>
            <%= f.label 'Current Image' %>
            <br>
        <% else %>
            <%= f.label 'Add an Image' %>
        <% end %>
        <%= f.file_field :image, class: "btn btn-primary" %>
      </div>
      <%= f.label :title %>*<br>
      <%= f.text_field :title, class: 'form-control form-control-lg' %><br>
        <br>
      <%= f.label :link %>*<br>
      <%= f.text_field :link, class: 'form-control form-control-lg' %><br>
        <br>  
      <%= f.label :description %>*<br>
      <%= f.text_area :description, class: 'form-control form-control-lg', :rows => "10" %><br>
        <br>
      <%= f.label :tag_list, "Tags (separated by commas)" %>
      <%= f.text_field :tag_list, class: 'form-control' %>
        <br>
      <%= f.submit 'Update', :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>



