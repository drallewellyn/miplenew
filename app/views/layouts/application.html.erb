<!doctype html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>miPLE - mi Personal Learning Environment Project</title>
    <meta name="description" content="Home : Be Different Bootstrap Theme - a different, unique theme with 10 different color combos. Built with Bootstrap, custom css3, html5, and plenty of excellent components, sliders, and other useful elements">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => false %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
    <%= csrf_meta_tags %>

    
</head>
<body>

<!-- +++++ No Script Fallback notice +++++ -->
<noscript>
<div>Turn on your JavaScript!</div>
</noscript>

<%= render 'layouts/header' %>
<%= render 'layouts/slideoutpanels' %>

<!-- =============== BEGIN #page ==============================-->
<div id="page"> 
    <!-- =========== BEGIN CONTENT FOR THE PAGE =========================================================================== -->
    <!-- <div class="page-content" role="main"> -->
        <!-- <div class="container">  -->
            <!-- .container for entire page --> 
            
            <% if notice %>
                <br>
                <div class = "container text-center panel panel-info text-info bg-info">
                    <p class="notice"><%= notice %></p>
                </div>
                <% elsif alert %>
                <br>
                <div class = "container text-center panel panel-warning text-warning bg-warning">
                    <p class="alert"><%= alert %></p>
                </div>
            <% end %>
            <%= yield %>




        <!-- </div> -->
        <!-- / .container --> 
        <!-- </div> -->
    <!-- /.page-content role=main --> 
    <!--=========== END CONTENT FOR THE PAGE ============================================================ --> 
</div>
<!-- ================== END #page ================= --> 

<%= render 'layouts/footer' %>
</body>
</html>

