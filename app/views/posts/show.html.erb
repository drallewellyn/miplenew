<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>miPLE - mi Personal Learning Environment Project</title>
    <meta name="description" content="Home : Be Different Bootstrap Theme - a different, unique theme with 10 different color combos. Built with Bootstrap, custom css3, html5, and plenty of excellent components, sliders, and other useful elements">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

    
</head>
<!-- =============== BEGIN #page ==============================-->
<div id="page"> 
    <!-- =========== PAGE HEADER ON ALL BUT INDEX PAGES =========================================================================== --> 
    <!-- _________ Page Header ___________ -->
    <div class="page-header-primary">
        <div class="container">
            <h2>My Blog</h2>
            <ol class="breadcrumb page-header-breadcrumb hidden-xs">
                <li><%= link_to "Home", root_path, class: "link-underline" %></li>
                <li><%= link_to "Blog", posts_path, class: "link-underline" %> </li>
                <li class="active"><%= @post.title %></li>
            </ol>
        </div>
        <!-- /.container (for page-header-primary) --> 
    </div>
    <!-- /.page-header-primary --> 
    <!-- =========== BEGIN CONTENT FOR THE PAGE =========================================================================== -->
    <div class="page-content" role="main">     
        <!--slide to sidebar toggle --> 
        <a class="visible-xs slide-sidebar has-anchor" href="#sidebar"><i class="ti ti-menu"></i> <em>Sidebar</em></a>
        <div class="container blog">
            <div class="row"> 
                <!-- ____ PRIMARY COLUMN GOES HERE ____ -->
                <div class="col-sm-8 col-md-9 primary-column" role="main">
                    <div class="entry-full-post"> 
                        <!-- _____________ BEGIN 'entry-post' _________ -->
                        <article class="entry-post clearfix">
                            <%= render 'posts/post' %>
                            <!--/ CRUD options if admin -->
                            <% if user_signed_in? %>
                                <div class="text-info">
                                    <%= link_to "Edit Article", edit_post_path(@post), class: "btn btn-primary" %>
                                    <%= link_to "Delete Article", post_path(@post), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure?" } %>
                                </div>
                            <% end %>
                            <!--/ end CRUD options -->
                        </article>
                        <!-- _____________ END 'entry-post'_________ --> 
                    </div>
                    <section>
                        <%= render 'posts/disqus' %>
                        <!-- End Comment Form --> 
                    </section>
                    <!--close comment section--> 
                </div>
           </div>
            <!--/.row--> 
        </div>
        <!--/.container--> 
    </div>
    <!-- /.page-content role=main --> 
    <!--=========== END CONTENT FOR THE PAGE ============================================================ --> 
</div>
<!-- ================== END #page ================= -->  
<!-- _________ FOOTER SCRIPTS  ________ --> 
